<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
    </style>

    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">Roboto-Light</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">Robot-Light</item>
    </style>

</resources>
