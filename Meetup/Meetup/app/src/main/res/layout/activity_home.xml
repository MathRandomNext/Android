<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.telerikacademy.meetup.activities.HomeActivity"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <fragment
                android:id="@+id/fragment_tool_bar"
                android:name="com.telerikacademy.meetup.fragments.ToolbarFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/address"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a place"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"/>

            <View
                    style="@style/AppTheme.TextView"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/secondaryText"/>
        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.Borderless"
                    android:layout_alignParentStart="true"
                    android:text="Restaurant"
                    android:textAllCaps="false"
                    android:drawableTop="@drawable/ic_solid_restaurant"
                    android:drawablePadding="8dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.Borderless"
                    android:layout_centerHorizontal="true"
                    android:text="Cafe"
                    android:textAllCaps="false"
                    android:drawableTop="@drawable/ic_solid_coffee_mug"
                    android:drawablePadding="8dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.Borderless"
                    android:layout_alignParentEnd="true"
                    android:text="Pub"
                    android:textAllCaps="false"
                    android:drawableTop="@drawable/ic_solid_pub"
                    android:drawablePadding="8dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.Borderless"
                    android:layout_alignParentStart="true"
                    android:text="Fast food"
                    android:textAllCaps="false"
                    android:drawableTop="@drawable/ic_solid_fast_food"
                    android:drawablePadding="8dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.Borderless"
                    android:layout_centerHorizontal="true"
                    android:text="Favourite"
                    android:textAllCaps="false"
                    android:drawableTop="@drawable/ic_solid_pub"
                    android:drawablePadding="8dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.Borderless"
                    android:layout_alignParentEnd="true"
                    android:text="Other"
                    android:textAllCaps="false"
                    android:drawableTop="@drawable/ic_solid_pub"
                    android:drawablePadding="8dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
