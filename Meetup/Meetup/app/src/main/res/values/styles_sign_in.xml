<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SignInTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#E43F3F</item>
        <item name="colorPrimaryDark">#CC1D1D</item>
        <item name="colorAccent">#CDC3C3</item>
        <item name="android:editTextStyle">@style/SignInTheme.EditText</item>
        <item name="android:buttonStyle">@style/SignInTheme.Button</item>
    </style>

    <style name="SignInTheme.EditText" parent="AppTheme.EditText">
        <item name="android:textColor">#f0eded</item>
    </style>

    <style name="SignInTheme.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#e1dbdb</item>
        <item name="colorControlNormal">#e1dbdb</item>
        <item name="colorControlActivated">#f0eded</item>
    </style>

    <style name="SignInTheme.Button" parent="AppTheme.Button">
        <item name="android:textColor">#e1dbdb</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SignInTheme.Button.Borderless" parent="AppTheme.Button.Borderless">
        <item name="android:textColor">#e1dbdb</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
