<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.telerikacademy.meetup.ui.fragments.RecentVenuesFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_recently_viewed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/recently_viewed"
            android:textStyle="bold"
            android:textColor="@color/secondaryText"
            android:textSize="16sp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.2dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/tv_recently_viewed"
            android:layout_alignBaseline="@id/tv_recently_viewed"
            android:background="@color/secondaryText"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.33">
                <ImageView
                    android:id="@+id/rv_image_0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/rv_button_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.RecentVenueButton"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.33">
                <ImageView
                    android:id="@+id/rv_image_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/rv_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.RecentVenueButton"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.33">
                <ImageView
                    android:id="@+id/rv_image_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/rv_button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.RecentVenueButton"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.33">
                <ImageView
                    android:id="@+id/rv_image_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/rv_button_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.RecentVenueButton"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.33">
                <ImageView
                    android:id="@+id/rv_image_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/rv_button_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.RecentVenueButton"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.33">
                <ImageView
                    android:id="@+id/rv_image_5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/rv_button_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Button.RecentVenueButton"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>